{
  "manifest_version": 3,
  "name": "Just Guard - Reklam Koruma",
  "version": "1.0.0",
  "description": "Şirket sitelerinize ait Google reklamlarına yanlışlıkla tıklanmasını önler",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://www.google.com.tr/*",
    "https://google.com/*",
    "https://google.com.tr/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.google.com.tr/*",
        "https://google.com/*",
        "https://google.com.tr/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
